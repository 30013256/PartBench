<Page
    x:Class="PartBench.PricePerformancePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PartBench"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <!--Margin for page header-->
    <Page.Resources>
        <Thickness x:Key="NavigationViewHeaderMargin">50,50</Thickness>
    </Page.Resources>

    <Grid>
        <!--Rows Title Bar | Everything Else-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--Nav Bar | Left-->
        <muxc:NavigationView CompactModeThresholdWidth="0" Header="Price to Performance" Background="#3d3d3d" x:Name="NavView" Grid.RowSpan="2" IsTitleBarAutoPaddingEnabled="False" IsBackEnabled="True" BackRequested="NavView_BackRequested" OpenPaneLength="280" PaneClosing="NavView_PaneClosing" PaneOpening="NavView_PaneOpening">
            <muxc:NavigationView.MenuItems>
                <muxc:NavigationViewItemHeader Content="Main Pages"/>
                <muxc:NavigationViewItem x:Name="NavItemHome" Tag="Home" Icon="Home" Content="Home" Tapped="NavItemHome_Tapped"/>
                <muxc:NavigationViewItem x:Name="NavItemBuilds" Tag="Home" Icon="Repair" Content="System Builds" Tapped="NavItemBuilds_Tapped"/>
                <muxc:NavigationViewItem x:Name="NavItemBuildGuide" Tag="Home" Icon="Keyboard" Content="System Build Guides" Tapped="NavItemBuildGuidePage_Tapped"/>
                <muxc:NavigationViewItemSeparator/>
                <muxc:NavigationViewItemHeader Content="Other"/>
                <muxc:NavigationViewItem x:Name="NavItemPricePerformance" Tag="Home" Icon="FourBars" Content="Price / Performance" Tapped="NavItemPricePerformance_Tapped"/>
                <muxc:NavigationViewItem x:Name="NavItemTestPage" Tag="TestPage" Icon="AllApps" Content="TestPage" Tapped="NavItemTestPage_Tapped"/>
            </muxc:NavigationView.MenuItems>
        </muxc:NavigationView>

        <!--Title bar set as draggable area-->
        <Grid x:Name="AppTitleBar" Background="Transparent" Margin="50,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="LeftPaddingColumn" Width="0"/>
                <ColumnDefinition/>
                <ColumnDefinition x:Name="RightPaddingColumn" Width="0"/>
            </Grid.ColumnDefinitions>
            <!--Logo-->
            <Image Grid.Column="1" Source="/Assets/PBLogo.png" Height="25" Margin="0,8" HorizontalAlignment="Left"/>
        </Grid>

        <!--Content Area - Margin.Left Expaned View 330 Colapsed View 90-->
        <Grid Grid.Row="1" x:Name="ContentContainer"  Margin="330,50,20,20">
            <Pivot Padding="-10,0,0,0">
                <PivotItem Header="GPU" Margin="10,0,-10,0">
                    <Grid>
                        <!--Column Descriptions-->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Video Card"/>
                            <TextBlock Grid.Column="1" Text="G3D Mark / Price"/>
                            <TextBlock Grid.Column="2" Text="G3D Mark"/>
                            <TextBlock Grid.Column="3" Text="Price"/>
                        </Grid>

                        <ScrollViewer Margin="0,30,-20,0">
                            <StackPanel Margin="0,0,20,0">
                                <!--Break Line-->
                                <Line Margin="0,8,0,8" X1="99999" Y1="0" StrokeThickness="2" Stroke="White"/>
                                <!--Column Content-->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="GeForce GTX 1650 SUPER"/>
                                    <Grid Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <!--Sets Line Length-->
                                            <ColumnDefinition Width="90*"/>
                                            <ColumnDefinition Width="10*"/>
                                        </Grid.ColumnDefinitions>
                                        <Line X1="9999"  StrokeThickness="7" Stroke="Red" VerticalAlignment="Center"/>
                                    </Grid>
                                    <TextBlock Grid.Column="2" Text="61.4"/>
                                    <TextBlock Grid.Column="3" Text="9824"/>
                                    <TextBlock Grid.Column="4" Text="159.99"/>
                                </Grid>

                                <!--Break Line-->
                                <Line Margin="0,8,0,8" X1="99999" Y1="0" StrokeThickness="2" Stroke="White"/>
                                <!--Column Content-->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="GeForce RTX 2060"/>
                                    <Grid Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <!--Sets Line Length-->
                                            <ColumnDefinition Width="50*"/>
                                            <ColumnDefinition Width="50*"/>
                                        </Grid.ColumnDefinitions>
                                        <Line X1="9999"  StrokeThickness="7" Stroke="Yellow" VerticalAlignment="Center"/>
                                    </Grid>
                                    <TextBlock Grid.Column="2" Text="39.7"/>
                                    <TextBlock Grid.Column="3" Text="16294"/>
                                    <TextBlock Grid.Column="4" Text="409.99"/>
                                </Grid>

                                <!--Break Line-->
                                <Line Margin="0,8,0,8" X1="99999" Y1="0" StrokeThickness="2" Stroke="White"/>
                                <!--Column Content-->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="GeForce RTX 2080 Ti"/>
                                    <Grid Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <!--Sets Line Length-->
                                            <ColumnDefinition Width="30*"/>
                                            <ColumnDefinition Width="70*"/>
                                        </Grid.ColumnDefinitions>
                                        <Line X1="9999"  StrokeThickness="7" Stroke="Orange" VerticalAlignment="Center"/>
                                    </Grid>
                                    <TextBlock Grid.Column="2" Text="19.8"/>
                                    <TextBlock Grid.Column="3" Text="21565"/>
                                    <TextBlock Grid.Column="4" Text="1089.99"/>
                                </Grid>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </PivotItem>
                <PivotItem Header="CPU">
                    <Grid>
                        <!--Column Descriptions-->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="CPU"/>
                            <TextBlock Grid.Column="1" Text="CPU Value (Mark/Price)"/>
                            <TextBlock Grid.Column="2" Text="CPU Mark"/>
                            <TextBlock Grid.Column="3" Text="Price"/>
                        </Grid>

                        <ScrollViewer Margin="0,30,-20,0">
                            <StackPanel Margin="0,0,20,0">
                                <!--Break Line-->
                                <Line Margin="0,8,0,8" X1="99999" Y1="0" StrokeThickness="2" Stroke="White"/>
                                <!--Column Content-->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="AMD Ryzen 5 3600"/>
                                    <Grid Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <!--Sets Line Length-->
                                            <ColumnDefinition Width="90*"/>
                                            <ColumnDefinition Width="10*"/>
                                        </Grid.ColumnDefinitions>
                                        <Line X1="9999"  StrokeThickness="7" Stroke="LimeGreen" VerticalAlignment="Center"/>
                                    </Grid>
                                    <TextBlock Grid.Column="2" Text="99.1"/>
                                    <TextBlock Grid.Column="3" Text="17836"/>
                                    <TextBlock Grid.Column="4" Text="179.99"/>
                                </Grid>

                                <!--Break Line-->
                                <Line Margin="0,8,0,8" X1="99999" Y1="0" StrokeThickness="2" Stroke="White"/>
                                <!--Column Content-->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock TextWrapping="Wrap" Grid.Column="0" Text="Intel Core i5-9600K @ 3.70GHz"/>
                                    <Grid Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <!--Sets Line Length-->
                                            <ColumnDefinition Width="50*"/>
                                            <ColumnDefinition Width="50*"/>
                                        </Grid.ColumnDefinitions>
                                        <Line X1="9999"  StrokeThickness="7" Stroke="LightBlue" VerticalAlignment="Center"/>
                                    </Grid>
                                    <TextBlock Grid.Column="2" Text="56.5"/>
                                    <TextBlock Grid.Column="3" Text="10897"/>
                                    <TextBlock Grid.Column="4" Text="192.99"/>
                                </Grid>

                                <!--Break Line-->
                                <Line Margin="0,8,0,8" X1="99999" Y1="0" StrokeThickness="2" Stroke="White"/>
                                <!--Column Content-->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Intel Core i9-9900X @ 3.50GHz"/>
                                    <Grid Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <!--Sets Line Length-->
                                            <ColumnDefinition Width="30*"/>
                                            <ColumnDefinition Width="70*"/>
                                        </Grid.ColumnDefinitions>
                                        <Line X1="9999"  StrokeThickness="7" Stroke="DarkOrange" VerticalAlignment="Center"/>
                                    </Grid>
                                    <TextBlock Grid.Column="2" Text="36.4"/>
                                    <TextBlock Grid.Column="3" Text="21754"/>
                                    <TextBlock Grid.Column="4" Text="598.99"/>
                                </Grid>
                            </StackPanel>
                        </ScrollViewer>   
                    </Grid>
                </PivotItem>
            </Pivot>
        </Grid>
        
        
    </Grid>
</Page>
