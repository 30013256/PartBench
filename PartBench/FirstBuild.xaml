        <Grid Grid.Row="1" x:Name="ContentContainer"  Margin="330,50,20,20">
            <Image Source="Assets/sample.png" MaxHeight="500" MaxWidth="450" Height="300" HorizontalAlignment="Right" VerticalAlignment="Top"/>
