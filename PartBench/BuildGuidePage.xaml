<Page
    x:Class="PartBench.BuildGuidePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PartBench"    
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:controls="using:Marduk.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Thickness x:Key="NavigationViewHeaderMargin">50,50</Thickness>
    </Page.Resources>

    <Grid>
        <!--Rows Title Bar | Everything Else-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--Nav Bar | Left-->
        <muxc:NavigationView CompactModeThresholdWidth="0" Header="Build Guide Page Header" Background="#3d3d3d" x:Name="NavView" Grid.RowSpan="2" IsTitleBarAutoPaddingEnabled="False" IsBackEnabled="True" BackRequested="NavView_BackRequested" OpenPaneLength="280" PaneClosing="NavView_PaneClosing" PaneOpening="NavView_PaneOpening">
            <muxc:NavigationView.MenuItems>
                <muxc:NavigationViewItemHeader Content="Main Pages"/>
                <muxc:NavigationViewItem x:Name="NavItemHome" Tag="Home" Icon="Home" Content="Home" Tapped="NavItemHome_Tapped"/>
                <muxc:NavigationViewItem x:Name="NavItemBuilds" Tag="Home" Icon="Repair" Content="System Builds" Tapped="NavItemBuilds_Tapped"/>
                <muxc:NavigationViewItem x:Name="NavItemBuildGuide" Tag="Home" Icon="Keyboard" Content="System Build Guide" Tapped="NavItemBuildGuide_Tapped"/>
                <muxc:NavigationViewItemSeparator/>
                <muxc:NavigationViewItemHeader Content="Test Pages"/>
                <muxc:NavigationViewItem x:Name="NavItemTestPage" Tag="TestPage" Icon="AllApps" Content="TestPage" Tapped="NavItemTestPage_Tapped"/>
            </muxc:NavigationView.MenuItems>
        </muxc:NavigationView>

        <!--Title bar set as draggable area-->
        <Grid x:Name="AppTitleBar" Background="Transparent" Margin="50,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="LeftPaddingColumn" Width="0"/>
                <ColumnDefinition/>
                <ColumnDefinition x:Name="RightPaddingColumn" Width="0"/>
            </Grid.ColumnDefinitions>
            <!--Logo-->
            <Image Grid.Column="1" Source="Assets/PartBenchLogoV1.png" Height="25" Margin="0,8" HorizontalAlignment="Left"/>
        </Grid>

        <!--Content Area - Margin.Left Expaned View 330 Colapsed View 90-->
        <Grid Grid.Row="1" x:Name="ContentContainer"  Margin="330,50,20,20">
            <!--All content inside is scrollable-->
            <ScrollViewer Margin="0,30,-20,0">
                <!--List Of builds-->
                <GridView>
                    <RelativePanel Background="Aqua" Height="350" Width="250" MaxHeight="350" MaxWidth="250">
                        <Button Background="Black" Margin="0,275,0,0" Height="75" Width="250" CornerRadius="0" Content="Click me" Click="Btn_Click1"></Button>
                    </RelativePanel>
                    <RelativePanel HorizontalAlignment="Center" Background="Aqua" Height="350" Width="250" MaxHeight="350" MaxWidth="250">
                        <Button Background="Black" Margin="0,275,0,0" Height="75" Width="250" CornerRadius="0" Content="Click me" Click="Btn_Click2"></Button>
                    </RelativePanel>
                    <RelativePanel Background="Aqua" HorizontalAlignment="Right" Height="350" Width="250" MaxHeight="350" MaxWidth="250">
                        <Button Background="Black" Margin="0,275,0,0" Height="75" Width="250" CornerRadius="0" Content="Click me" Click="Btn_Click3"></Button>
                    </RelativePanel>
                    <RelativePanel Background="Aqua" HorizontalAlignment="Right" Height="350" Width="250" MaxHeight="350" MaxWidth="250">
                        <Button Background="Black" Margin="0,275,0,0" Height="75" Width="250" CornerRadius="0" Content="Click me" Click="Btn_Click4"></Button>
                    </RelativePanel>
                    <RelativePanel Background="Aqua" HorizontalAlignment="Right" Height="350" Width="250" MaxHeight="350" MaxWidth="250">
                        <Button Background="Black" Margin="0,275,0,0" Height="75" Width="250" CornerRadius="0" Content="Click me" Click="Btn_Click5"></Button>
                    </RelativePanel>
                    <RelativePanel Background="Aqua" HorizontalAlignment="Right" Height="350" Width="250" MaxHeight="350" MaxWidth="250">
                        <Button Background="Black" Margin="0,275,0,0" Height="75" Width="250" CornerRadius="0" Content="Click me" Click="Btn_Click6"></Button>
                    </RelativePanel>
                    <RelativePanel Background="Aqua" HorizontalAlignment="Right" Height="350" Width="250" MaxHeight="350" MaxWidth="250">
                        <Button Background="Black" Margin="0,275,0,0" Height="75" Width="250" CornerRadius="0" Content="Click me" Click="Btn_Click7"></Button>
                    </RelativePanel>
                    <RelativePanel Background="Aqua" HorizontalAlignment="Right" Height="350" Width="250" MaxHeight="350" MaxWidth="250">
                        <Button Background="Black" Margin="0,275,0,0" Height="75" Width="250" CornerRadius="0" Content="Click me" Click="Btn_Click8"></Button>
                    </RelativePanel>

                </GridView>
            </ScrollViewer>

            <!--Grid adds fade out to the content at the botton of content area-->
            <Grid VerticalAlignment="Bottom" Height="15">
                <Grid.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#7F3D3D3D" Offset="0.4"/>
                        <GradientStop Color="#FF3D3D3D" Offset="0.933"/>
                        <GradientStop Color="#003D3D3D" Offset="0"/>
                        <GradientStop Color="#B73D3D3D" Offset="0.527"/>
                        <GradientStop Color="#E13D3D3D" Offset="0.713"/>
                        <GradientStop Color="#F93D3D3D" Offset="0.83"/>
                    </LinearGradientBrush>
                </Grid.Background>
            </Grid>

        </Grid>
    </Grid>
</Page>
